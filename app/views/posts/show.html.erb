<section class="post">
  <header>
    <h2 class="post-title"><%= @post.title %></h2>
    <p class="post-meta">
      <time datetime="<%= @post.created_at%>"><%= @post.created_at.to_s(:pretty) %></time>
    </p>
  </header>

  <div class="post-body">
    <%= raw(@post.rendered_body) %>
  </div>
</section>